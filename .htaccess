#Expiration
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 seconds"
  ExpiresByType text/html "access plus 1 seconds"
  ExpiresByType image/gif "access plus 1 day"
  ExpiresByType image/svg "access plus 1 day"
  ExpiresByType image/jpeg "access plus 1 day"
  ExpiresByType image/png "access plus 1 day"
  ExpiresByType text/css "access plus 60 minutes"
  ExpiresByType text/javascript "access plus 60 minutes"
  ExpiresByType application/x-javascript "access plus 60 minutes"
  ExpiresByType text/xml "access plus 60 minutes"
</IfModule>

# 1 —— Custom 404 File

ErrorDocument 404 /404.php

#2 — Prevent Directory File Listing

IndexIgnore *

#3 URL Rewrite

RewriteEngine On

#Post Page
RewriteRule  ^post/([a-z0-9]+)/?$ post/?id=$1  [NC,L] 

#Verify Page
RewriteRule  ^verify/([a-z0-9]+)/?$ verify/?id=$1  [NC,L] 

#Confirm Page
RewriteRule  ^confirm/([a-z0-9]+)/?$  confirm/?id=$1    [NC,L] 

#Support Page
RewriteRule  ^support/([a-z0-9]+)/?$  support/?id=$1    [NC,L] 

#Post-Panel Page
RewriteRule  ^id/([a-z0-9]+)/?$ ?id=$1  [NC,L] 