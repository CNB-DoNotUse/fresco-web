<html>
	<head></head>
	<body>
		<div class="container">
			<div class="email-content">
				<div class="email-content__title">
					Here's the latest from \{{{links}}}
				</div>
				<div class="email-content__body">
                    \{{#each galleries}}
                        <div class="gallery">
                            <div class="media">
                                \{{#if single_post}}
                                    \{{#each posts}}
                                        <a target="_blank" href="\{{ link }}" class="post large">
                                            <img src="\{{ image }}"></img>
                                        </a>
                                    \{{/each}}
                                \{{else}}
									\{{#each posts}}
										<a target="_blank" href="\{{ link }}" class="post">
											<img src="\{{ image }}"></img>
										</a>
									\{{/each}}
                                \{{/if}}
                            </div>
                            <div class="caption_container">
                                <div class="caption">\{{ caption }}</div>
                                <a target="_blank" href="\{{ gallery_link }}">OPEN GALLERY</a>
                            </div>
                        </div>
                    \{{/each}}
				</div>
				{{> footer }}
			</div>
		</div>
	</body>
</html>
