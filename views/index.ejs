<% include segments/head %>

<%
    const showModal = typeof(modal) !== 'undefined';

    display = showModal ? 'none' : '';
    show = showModal ? ' inline-block' : '';
%>

<div class="<%- showModal ? 'full wrapper index' : 'wrapper index' %>">
    <div id="_nav" class="<%- showModal ? 'nav transparent' : 'nav' %>">
        <a class="logo" href="/">
            <span class="icon-fresco"></span>
        </a>

        <ul>
            <li class="modal-action" style="display:<%- display %>" data-event="scroll" data-element="_hero">ABOUT</li>
            <li class="modal-action" style="display:<%- display %>" data-event="scroll" data-element="_highlights">HIGHLIGHTS</li>
            <li class="modal-action" style="display:<%- show %>" data-event="landing" id="landing-action">HOME</li>
            <% if(typeof(loggedIn) == 'undefined' || !loggedIn ? false : true){ %>
                <li>
                    <a href="/archive">NEWS DASHBOARD</a>
                </li>
            <% } else { %>
                <li data-event="modal" data-modal="account">NEWS DASHBOARD</li>
            <% } %>
        </ul>
    </div>

    <div class="hero-bg">
        <div></div>
    </div>

    <span
        class="mdi mdi-arrow-down-bold modal-action"
        id="landing-arrow"
        data-event="scroll"
        data-element="_hero">
    </span>

    <%- include('segments/landing', {display: display}) %>

    <%- include('modals/modal-wrap', {modals: modals }) %>

    <%- include('segments/footer', {display: display}) %>
</div>

<% include segments/scripts %>
