<% include segments/head %>

<%- include('segments/sidebar', { user: user, config: config, title: title}) %>

<div class="col-md-12 col-lg-10">
  <!-- navbar -->
  <nav class="navbar navbar-fixed-top navbar-default">
    <input accept="image/*,video/*,video/mp4" class="upload-import-files" multiple style="position:absolute;top:-100px" type="file">
    <div class="dim transparent toggle-drop toggler"></div>
    <button class="icon-button toggle-drawer toggler hidden-lg" type="button">
      <span class="mdi mdi-menu icon"></span>
    </button>
    <button class="icon-button hidden-xs upload-import" type="button">
      <span class="mdi mdi-upload icon"></span>
    </button>
    <div class="form-group-default">
      <input class="form-control twitter-import" placeholder="Link" type="text">
    </div>
    <div class="tab-control">
      <button class="btn btn-flat tab-admin" data-tab="assignments">
        Assignments
      </button>
      <button class="btn btn-flat tab-admin" data-tab="submissions">
        Submissions
      </button>
      <button class="btn btn-flat tab-admin" data-tab="imports">
        Imports
      </button>
      <!--<button class="btn btn-flat tab-admin" data-tab="">
					List: Public Safety
				</button>-->
    </div>
  <li class="drop no-border pull-right hidden-xs" style="opacity:0">
    <button class="toggle-drop md-type-subhead">
      <span class="mdi mdi-settings icon"></span>
      <span class="mdi mdi-menu-down icon"></span>
    </button>
    <div class="drop-menu panel panel-default">
      <div class="toggle-drop toggler md-type-subhead">Settings
        <span class="mdi mdi-menu-up icon pull-right"></span>
      </div>
      <div class="drop-body">
        <ul class="md-type-subhead">
          <li>Import alternate</li>
          <li>Import alternate</li>
        </ul>
      </div>
    </div>
  </li>
</nav>
<!-- end navbar -->
<!-- admin -->
<div class="container-fluid admin tabs">
  <!-- assignments -->
  <div class="tab tab-assignments">
    <div class="col-md-6 col-lg-7 list"></div>
    <div class="col-md-6 col-lg-5 form-group-default">
      <div class="dialog">
        <div class="dialog-foot">
          <!--<button type="button" class="btn btn-flat">Revert changes</button>-->
          <button class="btn btn-flat assignment-approve pull-right" data-id="" disabled type="button">Approve</button>
          <button class="btn btn-flat assignment-deny pull-right" data-id="" disabled type="button">Reject</button>
        </div>
        <div class="dialog-body" style="visibility: hidden;">
          <input class="form-control floating-label assignment-title" placeholder="Title" type="text">
          <textarea class="form-control floating-label assignment-caption" placeholder="Description" type="text"></textarea>
          <div class="map-group">
            <div class="form-group-default">
              <input class="form-control floating-label assignment-location" placeholder=" " type="text">
              <input class="form-control floating-label assignment-radius numbers" data-hint="feet" placeholder="Radius" type="text">
            </div>
            <div class="assignment-map-container">
              Just pretend there's a map here ok
            </div>
          </div>
          <input class="form-control floating-label assignment-hours" data-hint="hours from now" placeholder="Expiration time" type="text">
        </div>
      </div>
    </div>
  </div>
  <!-- end assignments -->
  <!-- submissions -->
  <div class="tab tab-submissions">
    <div class="col-md-6 col-lg-7 list"></div>
    <div class="col-md-6 col-lg-5 form-group-default">
      <div class="dialog">
        <div class="dialog-foot">
          <button class="btn btn-flat submission-revert" disabled type="button">Revert changes</button>
          <button class="btn btn-flat pull-right submission-verify" disabled type="button">Verify</button>
          <button class="btn btn-flat pull-right submission-skip" disabled type="button">Skip</button>
          <button class="btn btn-flat pull-right submission-delete" disabled type="button">Delete</button>
        </div>
        <div class="dialog-body" style="visibility: hidden;">
          <div class="frick submission-images"></div>
          <input class="form-control floating-label submission-byline" disabled placeholder="Byline" type="text">
          <textarea class="form-control floating-label submission-caption" placeholder="Caption" type="text"></textarea>
          <!--<div class="split">
								<div class="split-cell">
									<input type="text" class="form-control floating-label" placeholder="Name">
								</div>
								<div class="split-cell">
									<input type="text" class="form-control floating-label" placeholder="Affiliation">
								</div>
							</div>-->
          <div class="split chips">
            <div class="split-cell">
              <input class="form-control floating-label tags-input" placeholder="Tags" type="text">
              <ul class="chips tags submission-tags"></ul>
            </div>
            <div class="split-cell">
              <span class="md-type-body2">Suggested tags</span>
              <ul class="chips submission-suggested-tags"></ul>
            </div>
          </div>
          <div class="dialog-row split chips">
            <div class="split-cell">
              <input class="form-control floating-label submission-stories-input" placeholder="Stories" type="text">
              <ul class="chips submission-stories"></ul>
            </div>
            <div class="split-cell">
              <span class="md-type-body2">Suggested stories</span>
              <ul class="chips submission-suggested-stories"></ul>
            </div>
          </div>
          <div class="map-group">
            <div class="form-group-default">
              <input class="form-control floating-label google-autocomplete submission-location" disabled placeholder=" " type="text">
            </div>
            <div class="submission-map-container">
              Just pretend there's a map here ok
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- end submissions -->
  <!-- imports -->
  <div class="tab tab-imports">
    <div class="col-md-6 col-lg-7 list">
      <!-- tweet
					<div class="list-item">
						<div>
							<img class="img-circle" src="../img/placeholder-photo.jpg">
						</div>
						<div class="flexy">
							<p class="md-type-body1">Caption</p>
						</div>
						<div>
					 		<p class="md-type-body2">@user</p>
						</div>
						<div>
							<p class="md-type-body1">Location</p>
						</div>
						<div>
							<p class="md-type-body1">Time</p>
						</div>
					</div>
					<!-- end tweet -->
    </div>
    <div class="col-md-6 col-lg-5 form-group-default">
      <div class="dialog">
        <div class="dialog-foot">
          <button class="btn btn-flat import-revert" disabled type="button">Revert changes</button>
          <button class="btn btn-flat pull-right import-verify" disabled type="button">Verify</button>
          <button class="btn btn-flat pull-right import-skip" disabled type="button">Skip</button>
          <button class="btn btn-flat pull-right import-delete" disabled type="button">Delete</button>
        </div>
        <div class="dialog-body" style="visibility: hidden;">
          <div class="import-images"></div>
          <span id="import-byline-span"><input class="form-control floating-label import-byline" disabled placeholder="Byline" type="text"></span>
          <div class="drop" id="import-byline-selection">
            <button class="toggle-drop md-type-subhead import-byline-button">
              <span class="import-byline-text"></span>
              <span class="mdi mdi-menu-down icon"></span>
            </button>
            <div class="drop-menu panel panel-default byline-drop">
              <div class="toggle-drop toggler md-type-subhead">
                <span class="import-byline-text"></span>
                <span class="mdi mdi-menu-up icon pull-right"></span>
              </div>
              <div class="drop-body">
                <ul class="md-type-subhead" id="import-byline-options"></ul>
              </div>
            </div>
          </div>
          <div class="split import-other-origin">
            <div class="split-cell">
              <input class="form-control floating-label import-name" placeholder="Name" type="text">
            </div>
            <div class="split-cell">
              <input class="form-control floating-label import-affiliation" placeholder="Affiliation" type="text">
            </div>
          </div>
          <textarea class="form-control floating-label import-caption" placeholder="Caption" type="text"></textarea>
          <div class="split chips">
            <div class="split-cell">
              <input class="form-control floating-label tags-input" placeholder="Tags" type="text">
              <ul class="chips tags import-tags"></ul>
            </div>
            <div class="split-cell">
              <span class="md-type-body2">Suggested tags</span>
              <ul class="chips import-suggested"></ul>
            </div>
          </div>
          <div class="dialog-row split chips">
            <div class="split-cell">
              <input class="form-control floating-label import-stories-input" placeholder="Stories" type="text">
              <ul class="chips import-stories"></ul>
            </div>
            <div class="split-cell">
              <span class="md-type-body2">Suggested stories</span>
              <ul class="chips import-suggested-stories"></ul>
            </div>
          </div>
          <div class="map-group">
            <div class="form-group-default">
              <input class="form-control floating-label google-autocomplete import-location" placeholder=" " type="text">
            </div>
            <div class="import-map-container">
              Just pretend there's a map here ok
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- end imports -->
</div>
<!-- end admin -->
</div>
</div>
<%- include('segments/scripts') %>
<script src="/javascripts/moment.min.js" type="text/javascript"></script>
