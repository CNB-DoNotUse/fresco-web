<nav>
	<a href="/"><img alt="Fresco" src="https://d1dw1p6sgigznj.cloudfront.net/images/wordmark-nav.png"></a>
	<ul>
		<% 
			if (user){
		%>
		<li><a href="/highlights">Dashboard</a></li>
		<%
			}
		%>
	</ul>
</nav>
<section id="signup">
	<div>
		<% if (!token){ %>
			<h2>Sign up for<br>Fresco News</h2>
		<% }else{ %>
			<h2>Join <%= outlet_title %> on<br>Fresco News</h2>
		<% } 
		if (user){ %>
			<span>Please enter your password to accept this invitation.</span>
			<form>
				<input type="password" class="accept-pw" placeholder="Password" spellcheck="false">
				<input class="accept-submit" type="submit" value="Accept Invitation">
			</form>
		<%	}else{ %>
			<span>This account will be your personal account for your newsroom.</span>
			<form>
				<input type="text" class="join-fn" placeholder="First name" spellcheck="false">
				<input type="text" class="join-ln" placeholder="Last name" spellcheck="false">
				<!--<input type="text" class="join-outlet" placeholder="Outlet Title (optional)" spellcheck="false">-->
				<% 	if (!token) { %>
				<input type="text" class="join-em" placeholder="Email address" spellcheck="false">
				<%	} %>
				<input type="password" class="join-pw" placeholder="Password" spellcheck="false">
				<input type="password" class="join-c-pw" placeholder="Confirm password" spellcheck="false">
				<input class="join-submit" type="submit" value="Submit">
			</form>
		<% } %>
	</div>
</section>
