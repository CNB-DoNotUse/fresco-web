<script>
	window.onload = function(){
		$('.notify-email').change(function(){
			if ($('.notify-email-all').is(':checked') || $('.notify-email:not([disabled]):not(:checked)').length === 0)
				$('.notify-email-all').click();
			else if ($('.notify-email:not([disabled]):not(:checked)').length === 0)
				$('.notify-email-all').click();
		});
		$('.notify-sms').change(function(){
			if ($('.notify-sms-all').is(':checked'))
				$('.notify-sms-all').click();
			else if ($('.notify-sms:not([disabled]):not(:checked)').length === 0)
				$('.notify-sms-all').click();
		});
		$('.notify-fresco').change(function(){
			if ($('.notify-fresco-all').is(':checked'))
				$('.notify-fresco-all').click();
			else if ($('.notify-fresco:not([disabled]):not(:checked)').length === 0)
				$('.notify-fresco-all').click();
		});
		$('.notify-email-all').change(function(){
			if ($(this).is(':checked'))
				$('.notify-email:not(:checked)').click();
			else if ($('.notify-email:not([disabled]):not(:checked)').length === 0)
				$('.notify-email:checked').click();
		});
		$('.notify-sms-all').change(function(){
			if ($(this).is(':checked'))
				$('.notify-sms:not(:checked)').click();
			else if ($('.notify-sms:not([disabled]):not(:checked)').length === 0)
				$('.notify-sms:checked').click();
		});
		$('.notify-fresco-all').change(function(){
			if ($(this).is(':checked'))
				$('.notify-fresco:not(:checked)').click();
			else if ($('.notify-fresco:not([disabled]):not(:checked)').length === 0)
				$('.notify-fresco:checked').click();
		});
		
		//Disable all disabled checkboxes
		$('.checkbox.disabled').each(function(i, v){
			$(v).find('label > input').prop('disabled', true);
		})
		
		if ($('.notify-email:not([disabled]):not(:checked)').length === 0)
			$('.notify-email-all').click();
		if ($('.notify-sms:not([disabled]):not(:checked)').length === 0)
			$('.notify-sms-all').click();
		if ($('.notify-fresco:not([disabled]):not(:checked)').length === 0)
			$('.notify-fresco-all').click();
	};
</script>